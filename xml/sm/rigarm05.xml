<oofem version="1">
  <Output>rigarm05.out</Output>
  <Description>Test of master-slave connection</Description>
  <!-- only momentum influence to the displacements is taken into account -->
  <!-- beamShearCoeff is artificially enlarged. -->
  <Analysis type="LinearStatic" nsteps="1"/>
  <Domain domain="2dbeam">
    <OutputManager tstep_all="" dofman_all="" element_all=""/>
    <Nodes>
      <Node coords="0.0 0.0 0.0" dofidmask="1 3 5"/>
      <rigidarmnode coords="0.0 0.0 1.0" master="1" dofidmask="1 3 5" doftype="2 2 2" mastermask="1 1 1"/>
      <rigidarmnode coords="0.0 0.0 1.0" master="1" dofidmask="1 3 5" doftype="2 2 2" mastermask="1 1 1" lcs="0.0 0.0 1.0 0.0 1.0 0.0"/>
      <Node coords="0.0 0.0 0.0" dofidmask="1 3 5" lcs="0.0 0.0 1.0 0.0 1.0 0.0"/>
      <rigidarmnode id="5" coords="0.0 0.0 1.0" master="4" dofidmask="1 3 5" doftype="2 2 2" mastermask="1 1 1"/>
    </Nodes>
    <Elements/>
    <CrossSections>
      <SimpleCS area="1.0" iy="1.0" beamshearcoeff="1e+18" material="1"/>
    </CrossSections>
    <Materials>
      <IsoLE d="1.0" e="2.0" n="0.2" talpha="1.2e-05"/>
    </Materials>
    <BoundaryConditions>
      <BoundaryCondition loadtimefunction="1" dofs="1 3 5" values="0.0 1.0 1.0" set="1"/>
    </BoundaryConditions>
    <InitialConditions/>
    <LoadTimeFunctions>
      <ConstantFunction f_t_="1.0"/>
    </LoadTimeFunctions>
    <Sets>
      <Set nodes="1 4"/>
    </Sets>
  </Domain>
  <ExportModules>
    <!-- exact solution (do not change!!) -->
    <errorcheck tolerance="1e-06">
      <!-- check all nodes -->
      <NODE tStep="1" number="2" dof="1" unknown="d" value="1.0"/>
      <NODE tStep="1" number="2" dof="3" unknown="d" value="1.0"/>
      <NODE tStep="1" number="2" dof="5" unknown="d" value="1.0"/>
      <NODE tStep="1" number="3" dof="1" unknown="d" value="1.0"/>
      <NODE tStep="1" number="3" dof="3" unknown="d" value="-1.0"/>
      <NODE tStep="1" number="3" dof="5" unknown="d" value="1.0"/>
      <NODE tStep="1" number="5" dof="1" unknown="d" value="0.0"/>
      <NODE tStep="1" number="5" dof="3" unknown="d" value="0.0"/>
      <NODE tStep="1" number="5" dof="5" unknown="d" value="1.0"/>
    </errorcheck>
  </ExportModules>
</oofem>
