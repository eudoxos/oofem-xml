<oofem version="1">
  <Output>beam2d_4.out</Output>
  <Description>Test of nodal coordinate system</Description>
  <!-- only momentum influence to the displacements is taken into account -->
  <!-- beamShearCoeff is artificially enlarged. -->
  <Analysis type="StaticStructural" nsteps="1"/>
  <Domain domain="2dbeam">
    <OutputManager tstep_all="" dofman_all="" element_all=""/>
    <Nodes>
      <Node coords="0.0 0.0 3.0"/>
      <Node coords="0.0 0.0 0.0"/>
      <Node coords="2.0 0.0 0.0"/>
      <Node coords="4.0 0.0 0.0" lcs="0.866025 0.0 -0.5 0.0 1.0 0.0"/>
    </Nodes>
    <Elements>
      <Beam2d nodes="1 2"/>
      <Beam2d nodes="2 3"/>
      <Beam2d nodes="3 4"/>
    </Elements>
    <CrossSections>
      <SimpleCS area="1000.0" iy="0.0026244" beamshearcoeff="1e+18" material="1" set="1"/>
    </CrossSections>
    <Materials>
      <IsoLE d="1.0" e="25000000.0" n="0.2" talpha="1.2e-05"/>
    </Materials>
    <BoundaryConditions>
      <BoundaryCondition loadtimefunction="1" dofs="1 3" values="0.0 0.0" set="2"/>
      <BoundaryCondition loadtimefunction="1" dofs="3" values="0.0" set="3"/>
      <NodalLoad loadtimefunction="1" dofs="1 3 5" components="0.0 10.0 0.0" set="4"/>
    </BoundaryConditions>
    <InitialConditions/>
    <LoadTimeFunctions>
      <ConstantFunction f_t_="1.0"/>
    </LoadTimeFunctions>
    <Sets>
      <Set elementranges="1-3"/>
      <Set nodes="1"/>
      <Set nodes="4"/>
      <Set nodes="3"/>
    </Sets>
  </Domain>
  <ExportModules>
    <!-- exact solution -->
    <errorcheck tolerance="1e-08">
      <!-- check reactions -->
      <REACTION tStep="1" number="1" dof="1" value="2.01446385"/>
      <REACTION tStep="1" number="1" dof="3" value="-6.51084789"/>
      <REACTION tStep="1" number="4" dof="3" value="-4.02892629"/>
      <!-- check all nodes -->
      <!-- check element no. 3 force vector -->
      <BEAM_ELEMENT tStep="1" number="3" keyword="1" component="1" value="2.01446385"/>
      <BEAM_ELEMENT tStep="1" number="3" keyword="1" component="2" value="3.48915211"/>
      <BEAM_ELEMENT tStep="1" number="3" keyword="1" component="3" value="-6.97830422"/>
    </errorcheck>
  </ExportModules>
</oofem>
