<oofem version="1">
  <Output>truss2d_01.out</Output>
  <Description>bar with linear variation of area; loaded in tension</Description>
  <!-- only momentum influence to the displacements is taken into account -->
  <!-- beamShearCoeff is artificially enlarged. -->
  <Analysis type="StaticStructural" nsteps="1"/>
  <Domain domain="2dtruss">
    <OutputManager tstep_all="" dofman_all="" element_all=""/>
    <Nodes>
      <Node coords="0.0 0.0 0.0"/>
      <Node coords="1.0 0.0 0.0"/>
      <Node coords="2.0 0.0 0.0"/>
      <Node coords="3.0 0.0 0.0"/>
      <Node id="5" coords="4.0 0.0 0.0"/>
      <Node coords="5.0 0.0 0.0"/>
    </Nodes>
    <Elements>
      <truss2d nodes="1 2"/>
      <truss2d nodes="2 3"/>
      <truss2d nodes="3 4"/>
      <truss2d nodes="4 5"/>
      <truss2d id="5" nodes="5 6"/>
    </Elements>
    <CrossSections>
      <VariableCS area="$t=0.6+x1*(0.1-0.6)/5.;t*1.0$" material="1" set="1"/>
    </CrossSections>
    <Materials>
      <IsoLE d="1.0" e="30.0" n="0.2" talpha="1.2e-05"/>
    </Materials>
    <BoundaryConditions>
      <BoundaryCondition loadtimefunction="1" dofs="3" values="0.0" set="1"/>
      <BoundaryCondition loadtimefunction="1" dofs="1" values="0.0" set="3"/>
      <NodalLoad loadtimefunction="1" dofs="1 3" components="-10.0 0.0" set="2"/>
    </BoundaryConditions>
    <InitialConditions/>
    <LoadTimeFunctions>
      <PeakFunction t="1.0" f_t_="1.0"/>
    </LoadTimeFunctions>
    <Sets>
      <Set elementranges="1-5"/>
      <Set nodes="6"/>
      <Set nodes="1"/>
    </Sets>
  </Domain>
  <ExportModules>
    <!-- exact solution -->
    <errorcheck tolerance="0.001">
      <!-- check reactions -->
      <REACTION tStep="1" number="1" dof="1" value="10.0" tolerance="0.0001"/>
      <!-- check all nodes -->
      <NODE tStep="1" number="6" dof="1" unknown="d" value="-5.85473785"/>
      <NODE tStep="1" number="4" dof="1" unknown="d" value="-2.2991823"/>
      <!-- check element no. 1 force vector -->
      <!-- ELEMENT tStep 1 number 1 gp 1 keyword 1 component 1  value -18.181818 tolerance 1.e-4 -->
      <!-- ELEMENT tStep 1 number 5 gp 1 keyword 1 component 5  value -66.666666 tolerance 1.e-4 -->
      <NODE tStep="1" number="2" dof="1" unknown="d" value="-0.60606061"/>
    </errorcheck>
  </ExportModules>
</oofem>
