<oofem version="1">
  <Output>linear_constraint_1.out</Output>
  <Description>Test of linear constraint condition on a Truss2d element</Description>
  <Analysis type="LinearStatic" nsteps="1"/>
  <Domain domain="2dtruss">
    <OutputManager tstep_all="" dofman_all="" element_all=""/>
    <Nodes>
      <Node coords="0.0 0.0 0.0"/>
      <Node coords="2.0 0.0 0.0"/>
    </Nodes>
    <Elements>
      <Truss2d nodes="1 2"/>
    </Elements>
    <CrossSections>
      <SimpleCS thick="0.1" width="0.2" material="1" set="1"/>
    </CrossSections>
    <Materials>
      <IsoLE talpha="1.2e-05" d="1.0" e="1.0" n="0.2"/>
    </Materials>
    <BoundaryConditions>
      <BoundaryCondition loadtimefunction="1" dofs="1 3" values="0.0 0.0" set="2"/>
      <BoundaryCondition loadtimefunction="1" dofs="3" values="0.0" set="3"/>
      <!--LinearConstraintBC contributes to the following characteristic terms:-->
      <!--lhstype 4 1 2 3 4  - StiffnessMatrix, TangentStiffnessMatrix, SecantStiffnessMatrix, ElasticStiffnessMatrix-->
      <!--rhsType 48 - ExternalForcesVector-->
      <LinearConstraintBC loadtimefunction="1" dofmans="2" dofs="1" weights="1.0" weightsltf="2" rhs="-0.15" rhsltf="1" lhstype="1 2 3 4" rhstype="150 151"/>
    </BoundaryConditions>
    <InitialConditions/>
    <LoadTimeFunctions>
      <ConstantFunction f_t_="1.0"/>
      <ConstantFunction f_t_="0.5"/>
    </LoadTimeFunctions>
    <Sets>
      <Set elementranges="1"/>
      <Set nodes="1"/>
      <Set nodes="2"/>
    </Sets>
  </Domain>
  <ExportModules>
    <errorcheck tolerance="1e-06">
      <NODE tStep="1" number="2" dof="1" unknown="d" value="-0.3"/>
      <REACTION tStep="1" number="1" dof="1" value="0.003"/>
    </errorcheck>
  </ExportModules>
</oofem>
